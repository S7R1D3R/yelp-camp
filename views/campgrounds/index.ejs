<% include ../partials/header %>

    <header class="hero is-medium is-primary is-bold">

        <div class="hero body">

            <div class="container">

                <h1 class="title">Welcome to the Campgrounds Page!</h1>

                <h6 class="subtitle">Here you can find our most amazing campgrounds in the world!</h6>

                <a class="button" href="/campgrounds/new">Add a New Campground</a>
        </div>
    </header>
    
    <div class="container">
        <div class="columns">

            <% campgrounds.forEach((campground) => { %>
                <div class="column">
                    <figure class="image is-1by1">
                        <img src="<%= campground.image %>">
                    </figure>
                    <h4><%= campground.name %></h4>
                    <p>
                        <a href="/campgrounds/<%= campground.id %>" class="button">More Info</a>
                    </p>
                </div>
            <% }); %>

        </div>
    </div>

</div>

<% include ../partials/footer %>